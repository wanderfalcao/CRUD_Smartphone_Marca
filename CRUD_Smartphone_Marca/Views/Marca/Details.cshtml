@model CRUD_Smartphone_Marca.Domain.Models.MarcaEntity

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MarcaModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pais)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.qtdSmartphone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.qtdSmartphone)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Modelo</th>
            <th>Lançamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Smartphone)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lancamento)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Smartphone" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Smartphone" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Smartphone" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
